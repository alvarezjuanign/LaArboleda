---
interface Props {
	title: string
}

const {title} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<script src="https://kit.fontawesome.com/84424f6322.js" crossorigin="anonymous"></script>
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
body {
	color: CanvasText;
	background-color: Canvas;
	color-scheme: dark light;
	font-family: system-ui, sans-serif;
	margin: 0;
	padding: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}
</style>
